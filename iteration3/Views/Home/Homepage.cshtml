
@{
    ViewBag.Title = "Homepage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@*Home page*@
<div class="site-blocks-cover" style="overflow: hidden;" id="home-section">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-md-12" style="position: relative;" data-aos="fade-up" data-aos-delay="200">
                <div class="row mb-2" data-aos="fade-up" data-aos-delay="200">
                    <div class="col-1"></div>
                    <div class="col-xl-5 col-lg-5 col-md-10 col-sm-10 col-xs-10 mr-auto">
                        <br />
                        <hopme style="width: 447px; height: 140px"><span style="color:#25a3dd">hop</span><span style="color:#b1babf">M</span><span style="color:#25a3dd">e</span></hopme><br />
                        <subtitle>Combining social good and AI technologies</subtitle><br />
                        <additional-info>We are here to help refugees in Melbourne find the job based on their skills and experiences. All they need to do is enter their education level, English level and field of study, then our AI model “hopMe” will recommend the best employment solutions along with the most relevant advices to their personality. Click “find me a relevant job” button to start!</additional-info><br />
                        <div style="margin-top:20px">
                            <a href="~/Search/Analysis" class="btn btn-primary mr-2 mb-4">Find me a relevant job  ➔</a>
                        </div>
                    </div>
                    <!-- front page image is hidden on small screens -->
                    <div class="col-xl-5 col-lg-5 d-none d-lg-block align-content-start">
                        <img class="img-fluid pt-6" src="~/images/frontpage_infographic.png" alt="Image" />
                    </div>
                    <div class="col-1"></div>
                </div>
            </div>
        </div>
    </div>

</div>

