<!DOCTYPE html>
<html lang="en-us">
<head>
    <title>Hopme &mdash; by Kiwiprod</title>
    <link href="~/images/logo.png" rel="shortcut icon" type="image/x-icon" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">


    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,400,700" rel="stylesheet">
    <link rel="stylesheet" href="~/fonts/icomoon/style.css">

    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/jquery-ui.css">
    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/css/owl.theme.default.min.css">

    <link rel="stylesheet" href="~/css/jquery.fancybox.min.css">
    <link rel="stylesheet" href="~/css/bootstrap-datepicker.css">
    <link rel="stylesheet" href="~/fonts/flaticon/font/flaticon.css">

    <link rel="stylesheet" href="~/css/aos.css">

    <link rel="stylesheet" href="~/css/style.css">

    <style>
        #drophighlight {
            font-family: Montserrat;
            font-style: normal;
            font-weight: 700;
            font-size: 15px;
            line-height: 24px;
            color: #27A2DB;
        }

        #drop {
            font-family: Montserrat;
            font-style: normal;
            font-weight: normal;
            font-size: 15px;
            line-height: 24px;
            color: #27A2DB;
        }
    </style>


</head>

<body data-spy="scroll" data-target=".site-navbar-target" data-offset="300">
    <div id="overlayer"></div>
    @*loader*@
    <div class="loader">
        <div class="spinner-border text-primary" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>

    @*Google translate api*@
    <div class="container" style="text-align:center">
            <div id="google_translate_element"></div>
        </div>
    <div class="site-wrap" >

        <div class="site-mobile-menu site-navbar-target">
            <div class="site-mobile-menu-header">
                <div class="site-mobile-menu-close mt-3">
                    <span class="icon-close2 js-menu-toggle"></span>
                </div>
            </div>
            <div class="site-mobile-menu-body"></div>
        </div>

        @*navigation bar*@
        <header class="site-navbar py-4 js-sticky-header site-navbar-target" role="banner">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-6 col-md-3 col-xl-4  d-block">
                        <h1 class="mb-0 site-logo">
                            <a href="../Home/Homepage" class="mb-0">
                                <img class="img-fluid" src="~/images/kiwiprod.svg" />
                            </a>
                        </h1>
                    </div>

                    <div class="col-12 col-md-9 col-xl-8 main-menu">
                        <nav class="site-navigation position-relative text-right" role="navigation">

                            <ul class="site-menu main-menu js-clone-nav mr-auto d-none d-lg-block ml-0 pl-0">
                                <li><a href="~/Home/Homepage#home-section" class="nav-link">Home</a></li>
                                <li><a href="~/Home/Homepage#HowitWork" class="nav-link">How it works</a></li>
                                <li class="has-children">
                                    <a href="~/Search/Analysis" class="nav-link">Get career advice</a>
                                    <ul class="dropdown">
                                        <li><a href="~/Search/Analysis" id="drophighlight">AI Career Analysis</a></li>
                                        <li><a href="~/Search/Articles" id="drop">Articles</a></li>
                                        <li><a href="~/Search/quizz" id="drop">Quizzes</a></li>
                                    </ul>
                                </li>
                                <li><a href="~/Home/news" class="nav-link">News</a></li>
                            </ul>
                        </nav>
                    </div>
                    <div class="col-6 col-md-9 d-inline-block d-lg-none ml-md-0"><a data-target="#" class="site-menu-toggle js-menu-toggle text-black float-right"><span class="icon-menu h3"></span></a></div>
                </div>
            </div>
        </header>

        <div>
            @*Navigate to map*@
            <div id="homemap" style="position:fixed;bottom:30%;right:0%;z-index: 99 !important;">

                <a href="../Home/Map" class="mb-0 " title="Available help centres">
                    <img style="height:80px;width:80px;margin-right:2px;" src="~/images/Group 6.png" />
                </a>
            </div>

            @*chatbot*@
            <div id="chatbot" style="position:fixed;bottom:30%;right:0%;z-index: 99 !important;">

                <iframe id="chatbot1" src='https://webchat.botframework.com/embed/hopmetrial-bot6?s=v6izumTjutE.hmZNpss7MVfo1gaVSN_MEjMpH8q0ETqs7JDwbdz-AfY'
                        style='width: 300px; height: 300px;margin-right:20px;display:none'></iframe>

                <img style="height:80px;width:80px;position:sticky;margin-right:2px;" src="~/images/chatbot.png" id="chatbotimg" title="HOPPIE Chatbot" />
            </div>
        </div>

        @RenderBody()

        @RenderSection("scripts", required: false)
        <div class="footer py-5 ">

            <footer>
                <p>&copy; @DateTime.Now.Year - kiwiprod</p>
            </footer>
            <hr />
        </div>
    </div>

    <!--icon-->


    @*<script src="~/js/jquery-3.5.1.min.js"></script>*@
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/js/jquery-ui.js"></script>

    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/jquery.countdown.min.js"></script>
    <script src="~/js/bootstrap-datepicker.min.js"></script>
    <script src="~/js/jquery.easing.1.3.js"></script>

    <script src="~/js/aos.js"></script>
    <script src="~/js/jquery.fancybox.min.js"></script>
    <script src="~/js/jquery.sticky.js"></script>
    <script src="~/js/main.js"></script>

    @*google translate script*@
    <script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit">
        //javescript for translate function
    </script>
    <script type="text/javascript">
        //javescript for translate function
        function googleTranslateElementInit() {
            new google.translate.TranslateElement({ pageLanguage: 'en', layout: google.translate.TranslateElement.InlineLayout.HORIZONTAL }, 'google_translate_element');
        }
    </script>


    @*chatbot script*@
    <script>
        $("#chatbotimg").click(function () {

            if ($("#chatbot1").is(":visible")) { $("#chatbot1").hide(); }
            else { $("#chatbot1").show(); }

        });
    </script>

 
    @*location of two icon*@
    <script type="text/javascript">
        var h = window.screen.availHeight;
        $("#homemap").css("top", h * 0.25);
        $("#chatbot").css("top", h * 0.4);
    </script>
</body>
</html>








