@using iteration3.Models
@model analysisEntities
@{
    ViewBag.Title = "Analysis";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container col-12 col-sm-6 col-md-8 " style="margin-top:8%; margin-bottom: 1%">
    <br /><br /><br /><br />
    <div class="container justify-content-center text-center">
        <choose>Insert your details:</choose>
    </div><br />
    <div class="container  col-12 col-sm-6 col-md-12">

        @using (Html.BeginForm("Result", "Search", FormMethod.Post)) {
            <form action="/action_page.php">
                <div class="container col-12 col-sm-6 col-md-8" style="width:100%">
                    <div class=" justify-content-center text-center">

                        @Html.DropDownList("Gender", ViewBag.gender as SelectList, "Select Gender", new { @class = "btn btn-secondary dropdown-toggle" })
                    </div><br />
                    <div class="justify-content-center text-center">


                        @Html.DropDownList("age", ViewBag.age as SelectList, "Select Age", new { @class = "btn btn-secondary dropdown-toggle" })
                    </div><br />

                    <div class="justify-content-center text-center">


                        @Html.DropDownList("education", ViewBag.education as SelectList, "Select Education", new { @class = "btn btn-secondary dropdown-toggle" })
                    </div><br />
                    <div class="justify-content-center text-center">


                        @Html.DropDownList("field_study", ViewBag.field_study as SelectList, "Select Field", new { @class = "btn btn-secondary dropdown-toggle" })
                    </div><br />

                    <div class="justify-content-center text-center">

                        @Html.DropDownList("English_Profeciency", ViewBag.English_Profeciency as SelectList, "Select English", new { @class = "btn btn-secondary dropdown-toggle" })
                    </div><br />
                </div>
                <div class="row justify-content-center">
                    <button class="btn btn-primary mr-2 mb-2">Get results  ➔</button>
                </div>
            </form>
        }

    </div> 
</div>
